<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyName>ttsc</AssemblyName>
	</PropertyGroup>

	<PropertyGroup>
		<!--设置为工具包项目-->
		<PackAsTool>true</PackAsTool>
		<!--命令行工具名称-->
		<ToolCommandName>ttsc</ToolCommandName>
		<Version>1.0.0</Version>
		<Description>语音合成工具</Description>
		<PackageId>ttsc</PackageId>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
		<ProjectReference Include="..\..\src\Maomi.TTS.Windows\Maomi.TTS.Windows.csproj" />
	</ItemGroup>

</Project>
